@model Laboratoria.Models.Book

<div class="container-fluid">
    <form asp-action="Edit" asp-controller="Book" method="post">
        <input asp-for="Id" />
        <div class="mb-3">
            <span asp-validation-for="Title"></span>
            <input class="form-control" asp-for="Title" />
        </div>
        <div class="mb-3">
            <span asp-validation-for="Author"></span>
            <input class="form-control" asp-for="Author" />
        </div>
        <div class="mb-3">
            <span asp-validation-for="PublishingYear"></span>
            <input class="form-control" asp-for="PublishingYear" />
        </div>
        <div class="mb-3">
            <button class="btn-primary" type="submit">Zapisz</button>
        </div>
    </form>
</div>